{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "A production-ready Hono backend template with TypeScript, PostgreSQL (Sequelize), authentication, and best practices",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias -p tsconfig.json -f",
    "start": "node dist/server.js",
    "docker:infra:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:infra:down": "docker compose -f docker-compose.dev.yml down",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){ process.exit(1)} \" || husky",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/db/utilities/migrations/runMigrations.ts",
    "migrate:rollback": "tsx src/db/utilities/migrations/rollbackMigrations.ts",
    "migrate:status": "tsx src/db/utilities/migrations/statusMigrations.ts",
    "migrate:create": "tsx src/db/utilities/migrations/createMigration.ts"
  },
  "keywords": [
    "hono",
    "typescript",
    "postgresql",
    "sequelize",
    "authentication",
    "jwt",
    "backend",
    "template",
    "boilerplate"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@upstash/qstash": "^2.8.4",
    "@upstash/redis": "^1.36.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "hono": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.15.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "sequelize": "^6.37.3",
    "tsx": "^4.7.0",
    "umzug": "^3.8.2",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
